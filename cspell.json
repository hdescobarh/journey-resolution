// cSpell Settings
{
  // Version of the setting file.  Always 0.2
  "version": "0.2",
  //
  "enabled": true,
  // language - current active spelling language
  "language": "en, es",
  //
  "languageSettings": [
    {
      "languageId": "python",
      "includeRegExpList": [
        "#.*",
        "/[']{3}*?[']{3}/g",
        "/[\"]{3}*?[\"]{3}/g"
      ]
    },
    {
      "languageId": "markdown",
      "ignoreRegExpList": [
        "[`]{3}(.+\n)+[`]{3}",
        "[$]{1,2}.*?[$]{1,2}"
      ]
    },
    {
      "languageId": "rust",
      "includeRegExpList": [
        "[/]{2,3}.*",
        "[/][*]+\n?([\\S\\s]*?)[*][/]"
      ]
    }
  ],
  // flagWords - list of words to be always considered incorrect
  // This is useful for offensive words and common spelling errors.
  "flagWords": [
    "lenght"
  ],
  //
  "enableFiletypes": [
    "jupyter",
    "python",
    "r",
    "html",
    "css",
    "markdown",
    "perl"
  ],
  // Specify paths/files to ignore.
  "ignorePaths": [
    "cspell.json",
    "node_modules/**", // will cause cspell to ignore anything in the node_modules directory.
    ".git", // Ignore the .git directory
    "*.toml", // Ignore all .toml files.
    "*.code-workspace"
  ],
  // words - list of words to be always considered correct
  "words": [
    "Anisogénica",
    "anisogénicas",
    "Bioinformática",
    "blastn",
    "blastp",
    "blastx",
    "BRCA",
    "centiMorgan",
    "codominancia",
    "codominantes",
    "covariables",
    "covariates",
    "Escobar",
    "estadísticamente",
    "fenotípica",
    "genotipado",
    "genotipados",
    "genotípica",
    "heredabilidad",
    "heterocigoto",
    "homocigoto",
    "homocigotos",
    "Isoform",
    "isoformas",
    "Isogénica",
    "isogénicas",
    "lmer",
    "megablast",
    "multialélico",
    "multialélicos",
    "pelargo",
    "Pelargonina",
    "significancia",
    "subachoque",
    "sumapaz"
  ],
  // custom dictionaries
  "dictionaryDefinitions": [],
  "dictionaries": []
}
